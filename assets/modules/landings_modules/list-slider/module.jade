svg(id="gradientMask")
	defs
		pattern(id="nGradient", patternUnits="userSpaceOnUse", width="150", height="150")
			image(xlink:href="images/number-gradient.png", width="150", height="150")
#listSlider.list-slider
	each item, index in listSliderItems
		div
			.list-slider__item
				.list-slider__number
					svg
						text(fill="url(#nGradient)", y="100px")= index+1
				if (typeof(item.title) !== 'undefined')
					.list-slider__title= item.title

				if (typeof(item.text) !== 'undefined')
					.list-slider__text= item.text
				